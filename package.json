{
  "name": "donate-miami",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "DEBUG=mongo-seeding node index.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Jorge Sepulveda, Casey Maltese, Lisa McDonald",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.5.3",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mdbreact": "^5.0.0",
    "mongo-seeding": "^3.5.0",
    "mongoose": "^5.11.4",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "react-calendar": "^3.2.1"
  }
}
